# PostgreSQL Configuration
POSTGRES_USER=rfminsights
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=rfminsights

# Application Configuration
DATABASE_URL=postgresql://rfminsights:your_secure_postgres_password@postgres:5432/rfminsights
JWT_SECRET_KEY=your_secure_jwt_key_at_least_32_characters_long
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo for lower cost
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.7

# AWS Configuration (for email delivery)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Application Settings
APP_NAME=RFM Insights
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rfm_insights

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (if needed)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes 